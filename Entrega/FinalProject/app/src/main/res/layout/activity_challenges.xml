<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChallengesActivity">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/frgChallenge0"
        android:tag="frgChallenge0"
        android:name="es.usj.mastertsa.jchueca.finalproject.fragments.ChallengesFragment"
        android:layout_width="0dp"
        android:layout_height="103dp"
        app:layout_constraintBottom_toTopOf="@+id/frgChallenge1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout="@layout/fragment_challenges" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/frgChallenge1"
        android:tag="frgChallenge1"
        android:name="es.usj.mastertsa.jchueca.finalproject.fragments.ChallengesFragment"
        android:layout_width="0dp"
        android:layout_height="103dp"
        app:layout_constraintBottom_toTopOf="@+id/frgChallenge2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout="@layout/fragment_challenges" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/frgChallenge2"
        android:tag="frgChallenge2"
        android:name="es.usj.mastertsa.jchueca.finalproject.fragments.ChallengesFragment"
        android:layout_width="0dp"
        android:layout_height="103dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout="@layout/fragment_challenges" />

    <TextView
        android:id="@+id/tvChallengesPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/frgChallenge0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>